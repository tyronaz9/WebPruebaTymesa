@model IEnumerable<WebPruebaTymesa.Models.Cuentas>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Numero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Saldo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Clientes)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Numero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Saldo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Clientes.Nombre)
            </td>
            <td>


                @if (User.IsInRole("ROLE_ADMIN"))
                {
                    <a asp-action="Edit" asp-route-id="@item.CuentasID">Edit</a>

                }
                <a asp-action="Details" asp-route-id="@item.CuentasID">Details</a> 
                <a asp-action="Delete" asp-route-id="@item.CuentasID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
